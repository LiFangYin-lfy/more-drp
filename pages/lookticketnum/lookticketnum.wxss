page {
  background-color: #ff742f;
}
.container {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}
.container .bigimg {
  width: 100%;
}
.container .bigimg image {
  width: 100%;
}
.container .butto {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-radius: 16rpx;
  position: relative;
}
.container .butto .lf {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.container .butto .lf image {
  flex: 0 auto;
  width: 120rpx;
  height: 120rpx;
}
.container .butto .lf .name_lf {
  padding: 10rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
}
.container .butto .shareButton {
  background: transparent;
  top: 0rpx;
  right: 80rpx;
  border: none;
  position: absolute;
  width: 30%;
  height: 100%;
  padding: 0;
  z-index: 2;
}
.container .pip {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.65);
  padding: 32rpx 32rpx 100rpx;
  box-sizing: border-box;
}
.container .pip .boxs {
  position: relative;
  background-color: #ff742f;
  width: 100%;
  height: 85%;
  border-radius: 16rpx;
}
.container .pip .boxs .image {
  width: 100%;
  border-radius: 16rpx;
}
.container .pip .boxs .updown {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}
.container .pip .wenzis {
  width: 100%;
  padding: 12px 0 32rpx;
  box-sizing: border-box;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
